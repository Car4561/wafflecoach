<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAvailability"
    android:background="@color/colorLightBlue">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_trama_"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lyt_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <Button
                    android:id="@+id/btn_monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="J"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
                <Button
                    android:id="@+id/btn_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:layout_marginEnd="4dp"
                    android:elevation="4dp"
                    android:layout_weight="1"
                    style="@style/btnWhite"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lyt_days"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="Todos los días "
                style="@style/p"/>
            <TextView
                android:id="@+id/txtDaydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lyt_days"

                app:layout_constraintStart_toEndOf="@+id/txt_intro"
                android:text="lunes"
                style="@style/p"/>
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lyt_days"

                app:layout_constraintStart_toEndOf="@+id/txtDaydate"
                android:text=" tendrá este horario disponible:"
                style="@style/p"/>
            <LinearLayout
                android:id="@+id/lyt_hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/txt_intro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/rounded_white"
                android:elevation="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona tus horas disponibles:"
                    android:layout_marginBottom="12dp"
                    style="@style/p"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_hour_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="06:00 - 07:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="6"/>
                        <TextView
                            android:id="@+id/txt_hour_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="07:00 - 08:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="7"/>
                        <TextView
                            android:id="@+id/txt_hour_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="08:00 - 09:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="8"/>
                        <TextView
                            android:id="@+id/txt_hour_9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="09:00 - 10:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="9"/>
                        <TextView
                            android:id="@+id/txt_hour_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10:00 - 11:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="10"/>
                        <TextView
                            android:id="@+id/txt_hour_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11:00 - 12:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="11"/>
                        <TextView
                            android:id="@+id/txt_hour_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12:00 - 13:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="12"/>
                        <TextView
                            android:id="@+id/txt_hour_13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="13:00 - 14:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="13"/>
                        <TextView
                            android:id="@+id/txt_hour_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="14:00 - 15:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="14"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_hour_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15:00 - 16:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="15"/>
                        <TextView
                            android:id="@+id/txt_hour_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16:00 - 17:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="16"/>
                        <TextView
                            android:id="@+id/txt_hour_17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17:00 - 18:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="17"/>
                        <TextView
                            android:id="@+id/txt_hour_18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="18:00 - 19:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="18"/>
                        <TextView
                            android:id="@+id/txt_hour_19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="19:00 - 20:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="19"/>
                        <TextView
                            android:id="@+id/txt_hour_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20:00 - 21:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="20"/>
                        <TextView
                            android:id="@+id/txt_hour_21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="21:00 - 22:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="21"/>
                        <TextView
                            android:id="@+id/txt_hour_22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22:00 - 23:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="22"/>
                        <TextView
                            android:id="@+id/txt_hour_23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="23:00 - 00:00"
                            android:gravity="center"
                            android:textColor="@color/colorGray"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:elevation="4dp"
                            android:padding="4dp"
                            android:tag="23"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_vacations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/lyt_hours"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modo vacaciones"
                    android:layout_weight="1"/>
                <Switch
                    android:id="@+id/sw_vacations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:text="*Ya no podrán agendar nuevas citas contigo, sin embargo debes atender las que ya te agendaron"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lyt_vacations"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>