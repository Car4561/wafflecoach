<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Próximas citas con especialistas"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="8dp"
        android:textStyle="italic"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_item_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/rounded_white">

        <ImageView
            android:id="@+id/img_specialist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/circle"
            android:adjustViewBounds="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@+id/img_specialist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/txt_name"
                    style="@style/h2_gray"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/morado"

                    android:text="Angelo Quijano Orduña" />
                <TextView
                    android:id="@+id/txt_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:lines="1"
                    android:text="Angelo Quijano"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:id="@+id/txt_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:lines="1"
                    android:text="12 Agosto | 13:00 - 13:45" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_favorites"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_favorites"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_favorite_off"
                    android:alpha="0.8"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/txt_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="265"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/circle"
            android:adjustViewBounds="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>