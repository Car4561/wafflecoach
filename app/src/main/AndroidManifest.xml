<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peru.wafflecoach">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wafflecoach">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityPreguntas" />
        <activity android:name=".ActivityAddPaymentMethod" />
        <activity android:name=".ActivityPassword" />
        <activity android:name=".ActivityEditProfile" />
        <activity android:name=".ActivityCancelAppointment" />
        <activity android:name=".ActivityContact" />
        <activity android:name=".ActivityCheckout" />
        <activity android:name=".ActivityInfoPatient" />
        <activity android:name=".ActivityPayment" />
        <activity android:name=".ActivityScheduleAppointment" />
        <activity android:name=".ActivityFilter" />
        <activity android:name=".ActivityIntro" />
        <activity
            android:name=".ActivityPsychotherapist"
             />
        <activity android:name=".ActivityAvailability" />
        <activity android:name=".ActivityFormPsychotherapist" />
        <activity android:name=".ActivityTerms" />
        <activity android:name=".ActivityFaqs" />
        <activity android:name=".ActivityPaymentMethods" />
        <activity
            android:name=".ActivityWrapper"
            />
        <activity android:name=".ActivityRegister" />
        <activity android:name=".ActivityAccess" />


        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity android:name=".ActivityLogin" />
        <activity
            android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="FireBaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>